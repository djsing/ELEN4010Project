{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "courthouse",
                "./courthouse/*.cpp",
                "--std=c++11",
                "./lib/libfruit.a",
                "-I",
                "./include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Execute",
            "type": "shell",
            "command": "./courthouse.exe",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "courthouse.exe"
            ]
        }
    ]
}