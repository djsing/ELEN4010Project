{
    "version": "2.0.0",
    "tasks": [{
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "courtroom",
                "./courtroom/*.cpp",
                "--std=c++11",
                "./lib/libfruit.a",
                "-I",
                "./include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Execute",
            "type": "shell",
            "command": "./courtroom.exe",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "courtroom.exe"
            ]
        }
    ]
}